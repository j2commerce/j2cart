<extension type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_J2CANONICAL</name>
	<author>J2Commerce</author>
	<creationDate>JUN 2025</creationDate>
	<copyright>(C) 2016-2020 http://j2store.org. All rights reserved.</copyright>
	<copyright>(C) 2024-2025 J2Commerce, LLC</copyright>
    <license>GNU General Public License v3 or later versions</license>
    <authorEmail>support@j2commerce.com</authorEmail>
    <authorUrl>https://www.j2commerce.com</authorUrl>
    <version>4.1.0</version>
    <namespace path="src">J2Commerce\Plugin\System\J2canonical</namespace>
	<description>PLG_SYSTEM_J2CANONICAL_DESC</description>
	<files>
		<folder plugin="j2canonical">services</folder>
		<folder>src</folder>
	</files>

    <languages>
        <language tag="en-GB">languages/en-GB/plg_system_j2canonical.ini</language>
        <language tag="en-GB">languages/en-GB/plg_system_j2canonical.sys.ini</language>
    </languages>
	<config>
        <fields name="params">
              <fieldset name="basic">
                    <field
                        name="current_url_canonical"
                        type="radio"
                        default="0"
                        layout="joomla.form.field.radio.switcher" filter="integer"
                        label="PLG_SYSTEM_J2CANONICAL_CURRENT_URL_CANONICAL"
                        description="PLG_SYSTEM_J2CANONICAL_CURRENT_URL_CANONICAL_DESC"
                        >
                        <option value="0">PLG_SYSTEM_J2CANONICAL_MENU_CANONICAL</option>
                        <option value="1">PLG_SYSTEM_J2CANONICAL_SET_CURRENT_URL_AS_CANONICAL</option>
                    </field>
              </fieldset>
        </fields>
    </config>
</extension>

